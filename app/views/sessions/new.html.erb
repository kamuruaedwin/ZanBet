
    <div class="card" style="width: 28rem;" >
      <div class="card-header">
        <h5 class="card-title">Log In</h5>
      </div>
      <div class="card-body">
        

    <%= form_with model: @user, url: sessions_path,remote: true do |form| %>
      <div class="form-group">
        <%= form.label :phone_number %><br />
        <%= form.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %>
      </div>

      <div class="form-group">
        <%= form.label :password %><br />
        <%= form.password_field :password, autocomplete: "current-password" %>
      </div>

      

      <div class="actions">
        <%= form.submit "Log in", class:"touch-button" %>
      </div>
      <%= link_to 'Register', new_registration_path %>
    <% end %>

      </div>
    </div>
  

<%= link_to "Forgot Your password", new_password_reset_path %>
